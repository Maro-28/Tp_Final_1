@model IEnumerable<Tp_Final_1.Models.Post>

@{
    ViewData["Title"] = "Busqueda";
}

<table class="table">
    <thead>
        <tr>
            <th>
                Usuario
            </th>
            <th>
                Contenido del post
            </th>
            <th>
                Fecha del post
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.user.nombre)
                @Html.DisplayFor(modelItem => item.user.apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.contenido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fecha)
            </td>

        </tr>
}
    </tbody>
</table>

<a 
    type="button"
    class="mt-3 btn btn-success"
    asp-controller="Home"
    asp-action="Index">
    Volver al Home</a>