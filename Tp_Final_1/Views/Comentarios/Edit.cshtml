@model Tp_Final_1.Models.Comentario
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor Accessor


@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Comentario</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <input type="hidden" asp-for="idPost" />
            <input type="hidden" asp-for="idUser" />
            <input type="hidden" asp-for="fecha" />
            <div class="form-group">
                <label asp-for="contenido" class="control-label"></label>
                <input asp-for="contenido" class="form-control" />
                <span asp-validation-for="contenido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
            @if(Accessor.HttpContext.Session.GetString("_admin") != "True")
            {
                <div>
                <a 
                    type="button"
                    class="mt-3 btn btn-success"
                    asp-controller= "Home"
                    asp-action= "Index"

                    >Volver al Home</a>
                </div>
            }
            else
            {
                <div>
                <a 
                    type="button"
                    class="mt-3 btn btn-success"
                    asp-controller= "Posts"
                    asp-action= "Index"

                    >Volver al Home</a>
                </div>
            }
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
